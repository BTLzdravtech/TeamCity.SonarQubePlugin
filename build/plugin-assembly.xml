<?xml version="1.0"?>
<assembly>
  <id>plugin-assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>
  <files>
     <file>
         <source>target/teamcity-plugin.xml</source>
         <outputDirectory>/</outputDirectory>
     </file> 
     <file>
         <source>target/sonar-plugin-agent.zip</source>
         <outputDirectory>agent</outputDirectory>
     </file> 
  </files>
  <moduleSets>
    <moduleSet>
       <useAllReactorProjects>true</useAllReactorProjects>
       <includes>
           <include>jetbrains.buildServer.sonarplugin:sonar-plugin-server</include>
           <include>jetbrains.buildServer.sonarplugin:sonar-plugin-common</include>
       </includes>
       <binaries>
           <outputDirectory>server</outputDirectory>
           <unpack>false</unpack>
           <dependencySets>
               <dependencySet>
                    <excludes>
                         <exclude>*</exclude>
                    </excludes>
               </dependencySet>
           </dependencySets>
       </binaries>
    </moduleSet>
  </moduleSets>
    <fileSets>
        <fileSet>
            <directory>../sonar-qube-runner/</directory>
            <outputDirectory>bundled/sonar-qube-runner-2.4/</outputDirectory>
            <includes>
                <include>*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
